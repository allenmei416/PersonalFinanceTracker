@model PersonalFinanceTracker.Web.Models.DashboardViewModel

<div class="container-fluid mt-4">

    <!-- First Row -->
    <div class="row mb-4">
        <!-- Left box (1/3 width) -->
        <div class="col-md-4">
            <div class="dashboard-box">
                <h5>Summary Box</h5>
            </div>
        </div>

        <!-- Right box (2/3 width) -->
        <div class="col-md-8">
            <div class="dashboard-box">
                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <input type="text" class="form-control w-50" placeholder="Filter transactions..." id="filterInput" />
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addTransactionModal">
                        Add Transaction
                    </button>
                </div>

                <div class="table-container">
                    <table class="table table-striped mb-0">
                        <thead>
                            <tr>
                                <th>Category</th>
                                <th>Amount</th>
                                <th>Date Added</th>
                                <th>Note</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Transactions != null && Model.Transactions.Any())
                            {
                                foreach (var tx in Model.Transactions)
                                {
                                    <tr>
                                        <td>@tx.CategoryName</td>
                                        <td>@tx.Amount.ToString("C")</td>
                                        <td>@tx.Date.ToShortDateString()</td>
                                        <td>@tx.Note</td>
                                        <td>
                                            <button class="btn btn-sm btn-warning me-1" onclick="alert('Edit transaction');">Edit</button>
                                            <button class="btn btn-sm btn-danger" onclick="alert('Delete transaction');">Delete</button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted">No transactions available.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Second Row -->
    <div class="row">
        <div class="col-md-4">
            <div class="dashboard-box">
                <h5>Box 1</h5>
            </div>
        </div>
        <div class="col-md-4">
            <div class="dashboard-box">
                <h5>Box 2</h5>
            </div>
        </div>
        <div class="col-md-4">
            <div class="dashboard-box">
                <h5>Box 3</h5>
            </div>
        </div>
    </div>
</div>

<!-- Add Transaction Modal -->
<div class="modal fade" id="addTransactionModal" tabindex="-1" aria-labelledby="addTransactionLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addTransactionLabel">Add New Transaction</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <!-- Error message area -->
                <div id="modalErrorMessage" class="alert alert-danger d-none" role="alert"></div>

                @using (Html.BeginForm("AddTransaction", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("Id", 0)

                    <div class="mb-3">
                        @Html.Label("CategoryId", "Category", new { @class = "form-label" })
                        @Html.DropDownList(
                            "CategoryId",
                            Model.Categories != null ? new SelectList(Model.Categories, "CategoryId", "Name") : new SelectList(Enumerable.Empty<SelectListItem>()),
                            "Select a category",
                            new { @class = "form-control", required = "required" }
                        )
                    </div>

                    <div class="mb-3">
                        @Html.Label("Amount", "Amount ($)", new { @class = "form-label" })
                        @Html.TextBox("Amount", null, new { @class = "form-control", type = "number", step = "0.01", placeholder = "Enter amount", required = "required" })
                    </div>

                    <div class="mb-3">
                        @Html.Label("Date", "Date", new { @class = "form-label" })
                        @Html.TextBox("Date", null, new { @class = "form-control", type = "date", required = "required" })
                    </div>

                    <div class="mb-3">
                        @Html.Label("Note", "Note", new { @class = "form-label" })
                        @Html.TextArea("Note", null, new { @class = "form-control", placeholder = "Optional note" })
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <input type="submit" class="btn btn-primary" value="Save Transaction" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Script to reopen modal and show error -->
@if (ViewBag.ShowModal != null && (bool)ViewBag.ShowModal)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var modal = new bootstrap.Modal(document.getElementById('addTransactionModal'));
            modal.show();

            var errorMessage = '@ViewBag.ErrorMessage';
            if (errorMessage) {
                var msgBox = document.getElementById('modalErrorMessage');
                msgBox.textContent = errorMessage;
                msgBox.classList.remove('d-none');
            }
        });
    </script>
}
